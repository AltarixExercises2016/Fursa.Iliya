<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="390dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_lesson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:text="@string/test_lesson2"
                android:textAlignment="textStart"
                android:textAllCaps="true"
                android:textStyle="normal|bold"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/tv_type"
                android:layout_alignRight="@+id/tv_type"
                android:layout_below="@+id/tv_auditory"
                android:layout_toRightOf="@+id/tv_teacher"
                android:layout_toStartOf="@+id/tv_type"
                android:text="@string/test_time"
                android:textAlignment="textStart"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_auditory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_lesson"
                android:layout_alignStart="@+id/tv_lesson"
                android:layout_below="@+id/tv_lesson"
                android:text="@string/test_auditory"
                android:textAlignment="textStart"/>

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/shape"
                android:text="@string/test_type"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_time"
                android:layout_alignBottom="@+id/tv_time"
                android:layout_alignLeft="@+id/tv_auditory"
                android:layout_alignStart="@+id/tv_auditory"
                android:text="@string/test_teacher2"
                android:textAlignment="textStart"
                android:textSize="12sp"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>