<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- A CardView that contains a TextView -->

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:id="@+id/infoCard"
        android:layout_marginBottom="40dp"
        app:cardElevation="6dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </TableLayout>

            <TextView
                android:text="@string/test_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_type1"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="23dp"
                android:background="@color/colorAccent" />

            <TextView
                android:text="@string/test_auditory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/infoCard"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="23dp"
                android:id="@+id/tv_auditory1" />

            <TextView
                android:text="@string/test_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="17dp"
                android:layout_marginEnd="17dp"
                android:id="@+id/tv_time1"
                android:layout_alignBaseline="@+id/tv_auditory1"
                android:layout_alignBottom="@+id/tv_auditory1"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="@string/test_lesson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/infoCard"
                android:layout_alignStart="@+id/infoCard"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:id="@+id/tv_lesson1"
                android:textStyle="normal|bold"
                android:layout_below="@+id/tv_type1" />

            <TextView
                android:text="@string/test_teacher2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/tv_teacher1"
                android:layout_alignTop="@+id/tv_lesson1" />

            <TextView
                android:text="@string/test_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/infoCard"
                android:layout_alignLeft="@+id/infoCard"
                android:layout_alignStart="@+id/infoCard"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="70dp"
                android:id="@+id/tv_type2"
                android:background="@color/colorAccent" />

            <TextView
                android:text="@string/test_auditory2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_auditory2"
                android:layout_alignBaseline="@+id/tv_type2"
                android:layout_alignBottom="@+id/tv_type2"
                android:layout_alignLeft="@+id/tv_auditory1"
                android:layout_alignStart="@+id/tv_auditory1" />

            <TextView
                android:text="@string/test_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_time2"
                android:layout_alignBaseline="@+id/tv_auditory2"
                android:layout_alignBottom="@+id/tv_auditory2"
                android:layout_alignRight="@+id/tv_time1"
                android:layout_alignEnd="@+id/tv_time1" />

            <TextView
                android:text="@string/test_lesson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_lesson2"
                android:layout_alignLeft="@+id/tv_type2"
                android:layout_alignStart="@+id/tv_type2"
                android:textStyle="normal|bold"
                android:layout_below="@+id/tv_type2" />

            <TextView
                android:text="@string/test_teacher2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/infoCard"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="85dp"
                android:id="@+id/tv_teacher2" />

            <TextView
                android:text="@string/test_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_type3"
                android:layout_below="@+id/tv_lesson2"
                android:layout_alignLeft="@+id/tv_lesson1"
                android:layout_alignStart="@+id/tv_lesson1"
                android:layout_marginTop="15dp"
                android:background="@color/colorAccent" />

            <TextView
                android:text="@string/test_auditory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/tv_auditory3"
                android:layout_alignTop="@+id/tv_type3" />

            <TextView
                android:text="@string/test_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_time3"
                android:layout_alignBaseline="@+id/tv_auditory3"
                android:layout_alignBottom="@+id/tv_auditory3"
                android:layout_alignRight="@+id/tv_time2"
                android:layout_alignEnd="@+id/tv_time2" />

            <TextView
                android:text="@string/test_lesson2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/infoCard"
                android:layout_alignStart="@+id/infoCard"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp"
                android:id="@+id/tv_lesson3"
                android:textStyle="normal|bold"
                android:layout_below="@+id/tv_type3" />

            <TextView
                android:text="@string/test_teacher2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_teacher3"
                android:layout_below="@+id/tv_auditory3"
                android:layout_alignLeft="@+id/tv_teacher2"
                android:layout_alignStart="@+id/tv_teacher2" />

            <TextView
                android:text="@string/test_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:id="@+id/tv_type4"
                android:background="@color/colorAccent"
                android:layout_below="@+id/tv_lesson3"
                android:layout_alignLeft="@+id/tv_type3"
                android:layout_alignStart="@+id/tv_type3" />

            <TextView
                android:text="@string/test_auditory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/infoCard"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="160dp"
                android:id="@+id/tv_auditory4" />

            <TextView
                android:text="@string/test_lesson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_lesson4"
                android:textStyle="normal|bold"
                android:layout_below="@+id/tv_type4"
                android:layout_alignLeft="@+id/tv_type4"
                android:layout_alignStart="@+id/tv_type4" />

            <TextView
                android:text="@string/test_teacher2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/infoCard"
                android:layout_alignLeft="@+id/infoCard"
                android:layout_alignStart="@+id/infoCard"
                android:layout_marginLeft="97dp"
                android:layout_marginStart="97dp"
                android:layout_marginTop="177dp"
                android:id="@+id/tv_teacher4" />

            <TextView
                android:text="@string/test_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_time4"
                android:layout_alignBaseline="@+id/tv_auditory4"
                android:layout_alignBottom="@+id/tv_auditory4"
                android:layout_alignRight="@+id/tv_time3"
                android:layout_alignEnd="@+id/tv_time3" />

            <TextView
                android:text="@string/test_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_type5"
                android:layout_below="@+id/tv_lesson4"
                android:layout_alignLeft="@+id/tv_lesson3"
                android:layout_alignStart="@+id/tv_lesson3"
                android:layout_marginTop="12dp"
                android:background="@color/colorAccent" />

            <TextView
                android:text="@string/test_lesson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_lesson5"
                android:layout_below="@+id/tv_type5"
                android:layout_alignRight="@+id/tv_lesson2"
                android:layout_alignEnd="@+id/tv_lesson2"
                android:textStyle="normal|bold" />

            <TextView
                android:text="@string/test_auditory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_auditory5"
                android:layout_alignBaseline="@+id/tv_type5"
                android:layout_alignBottom="@+id/tv_type5"
                android:layout_alignLeft="@+id/tv_auditory4"
                android:layout_alignStart="@+id/tv_auditory4" />

            <TextView
                android:text="@string/test_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_teacher5"
                android:layout_below="@+id/tv_auditory5"
                android:layout_alignLeft="@+id/tv_teacher3"
                android:layout_alignStart="@+id/tv_teacher3" />

            <TextView
                android:text="@string/test_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_time5"
                android:layout_above="@+id/tv_teacher5"
                android:layout_alignRight="@+id/tv_time4"
                android:layout_alignEnd="@+id/tv_time4" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>